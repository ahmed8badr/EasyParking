<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".YourProfile"
    android:orientation="vertical"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="20dp"
    >
    <TextView
        android:id="@+id/greeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        />


    <TextView
        android:id="@+id/emailAddressTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-mail Address"
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/greeting"
        app:layout_constraintLeft_toLeftOf="@+id/greeting"
        android:layout_marginTop="20sp"
         />

    <TextView
        android:id="@+id/emailAdress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/emailAddressTitle"
        app:layout_constraintLeft_toLeftOf="@+id/emailAddressTitle"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/fullNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Name"
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="@+id/emailAdress"
        app:layout_constraintTop_toBottomOf="@+id/emailAdress"
        app:layout_constraintLeft_toLeftOf="@+id/emailAdress"
        android:layout_marginTop="20sp"
        />

    <TextView
        android:id="@+id/fullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/fullNameTitle"
        app:layout_constraintLeft_toLeftOf="@+id/fullNameTitle"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/carNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Car Name"
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="@+id/fullName"
        app:layout_constraintTop_toBottomOf="@+id/fullName"
        app:layout_constraintLeft_toLeftOf="@+id/fullName"
        android:layout_marginTop="20sp"
        />

    <TextView
        android:id="@+id/carName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/carNameTitle"
        app:layout_constraintLeft_toLeftOf="@+id/carNameTitle"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/carLicenseTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Car License"
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="@+id/carName"
        app:layout_constraintTop_toBottomOf="@+id/carName"
        app:layout_constraintLeft_toLeftOf="@+id/carName"
        android:layout_marginTop="20sp"
        />

    <TextView
        android:id="@+id/carLicense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/carLicenseTitle"
        app:layout_constraintLeft_toLeftOf="@+id/carLicenseTitle"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/carColorTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Car Color"
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="@+id/carLicense"
        app:layout_constraintTop_toBottomOf="@+id/carLicense"
        app:layout_constraintLeft_toLeftOf="@+id/carLicense"
        android:layout_marginTop="20sp"
        />
    <TextView
        android:id="@+id/carColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/carColorTitle"
        app:layout_constraintLeft_toLeftOf="@+id/carColorTitle"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/phoneNumberTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Car Color"
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="@+id/carColor"
        app:layout_constraintTop_toBottomOf="@+id/carColor"
        app:layout_constraintLeft_toLeftOf="@+id/carColor"
        android:layout_marginTop="20sp"
        />

    <TextView
        android:id="@+id/phoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/phoneNumberTitle"
        app:layout_constraintLeft_toLeftOf="@+id/phoneNumberTitle"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        />

    <Button
        android:id="@+id/back_Btn"
        android:layout_width="108dp"
        android:layout_height="69dp"
        android:gravity="center"
        android:text="Back"
        android:textColor="@color/black"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.779" />


</androidx.constraintlayout.widget.ConstraintLayout>